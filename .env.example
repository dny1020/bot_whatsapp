# ===================================
# Twilio WhatsApp API
# ===================================
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=whatsapp:+14155238886

# ===================================
# Deployment
# ===================================
DOMAIN=bot.yourdomain.com
ENV=production
SECRET_KEY=generate_a_secure_random_key_here
ENABLE_MOCK_WHATSAPP=false

# ===================================
# Database
# ===================================
POSTGRES_USER=chatbot
POSTGRES_PASSWORD=secure_password_here
POSTGRES_DB=chatbot_db
DATABASE_URL=postgresql+psycopg2://chatbot:secure_password_here@postgres:5432/chatbot_db

# ===================================
# Redis
# ===================================
REDIS_URL=redis://redis:6379/0

# ===================================
# LLM Provider - GROQ (Primary)
# ===================================
GROQ_API_KEY=your_groq_api_key_here

# ===================================
# Optional: Other LLM Providers
# ===================================
# ANTHROPIC_API_KEY=your_anthropic_key
# OPENAI_API_KEY=your_openai_key (not needed for RAG, embeddings are local)
