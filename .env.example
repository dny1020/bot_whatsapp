# ===================================
# WhatsApp Business API Configuration
# ===================================
# Get these from: https://developers.facebook.com/apps/
WHATSAPP_VERIFY_TOKEN=your_verification_token_here_must_match_webhook_setup
WHATSAPP_ACCESS_TOKEN=your_meta_access_token_from_facebook_app
WHATSAPP_PHONE_ID=your_phone_number_id_from_whatsapp_business
WHATSAPP_BUSINESS_ID=your_business_account_id
WHATSAPP_API_VERSION=v18.0

# ===================================
# Application Settings
# ===================================
ENV=production
DEBUG=false
LOG_LEVEL=INFO
SECRET_KEY=generate-a-strong-random-secret-key-here-min-32-chars

# ===================================
# Database Configuration
# ===================================
# For Docker: use service name (postgres)
# For local: use localhost
DATABASE_URL=postgresql://chatbot:chatbot_password@postgres:5432/chatbot_db

# ===================================
# Redis Configuration
# ===================================
# For Docker: use service name (redis)
# For local: use localhost
REDIS_URL=redis://redis:6379/0

# ===================================
# API Configuration
# ===================================
API_HOST=0.0.0.0
API_PORT=8000
WEBHOOK_PORT=8001

# ===================================
# LLM / AI Configuration
# ===================================
# Choose ONE provider by setting its API key

# OpenAI (GPT-3.5, GPT-4)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=
OPENAI_MODEL=gpt-3.5-turbo

# Anthropic (Claude)
# Get from: https://console.anthropic.com/
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL=claude-3-haiku-20240307

# Groq (Fast open models)
# Get from: https://console.groq.com/
GROQ_API_KEY=
GROQ_MODEL=llama-3.1-8b-instant

# Local Model (HuggingFace, GGUF, etc.)
USE_LOCAL_MODEL=false
NLP_MODEL_PATH=models/base-model

# Embeddings (for RAG)
USE_LOCAL_EMBEDDINGS=false
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# ===================================
# NLP Configuration
# ===================================
# Enable/disable NLP features
ENABLE_INTENT_CLASSIFICATION=true
ENABLE_ENTITY_EXTRACTION=true
ENABLE_SENTIMENT_ANALYSIS=true
ENABLE_LLM_FALLBACK=false

# ===================================
# Delivery Configuration
# ===================================
DELIVERY_RADIUS_KM=10.0
MAX_DELIVERY_TIME_MINUTES=60
DELIVERY_FEE_BASE=5.0

# ===================================
# Security
# ===================================
ALLOWED_ORIGINS=*
RATE_LIMIT_PER_MINUTE=60

# ===================================
# Feature Flags
# ===================================
ENABLE_RAG=true
ENABLE_VOICE_MESSAGES=false
ENABLE_IMAGE_PROCESSING=false
ENABLE_LOCATION_TRACKING=false

# ===================================
# Monitoring (Optional)
# ===================================
SENTRY_DSN=
PROMETHEUS_ENABLED=false
